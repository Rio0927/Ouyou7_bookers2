<h1 class="font-weight-bold">Follower Users</h1>
    <table class="table">
        <tr>
            <th class="font-weight-bold">image</th>
            <th class="font-weight-bold">name</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        <% @followers.each do |follower| %>
            <tr>
                <td><%= attachment_image_tag(follower, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
                <td><%= follower.name %></td>
                <td>フォロー数：<%= follower.followings.count %></td>
                <td>フォロワー数：<%= follower.followers.count %></td>
                <td><%= link_to "Show", user_path(follower) %></td>
            </tr>
        <% end %>